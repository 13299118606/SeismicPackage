<?xml version="1.0"?>
<!DOCTYPE Gui SYSTEM "http://mezcal.internal.int.com/Conoco/dtds/gui.dtd">
<Gui> 
  <Window keyword="FontEditor">
  	
  	<MenuBar>
  		<Menu label="File">
		  <Button keyword="Close">Close</Button> 
  		</Menu>
  	</MenuBar>
  
  	<CommandArea keyword="CommandArea"> 
  		
		<Screen keyword="FontEditorPanel" title="Font Editor">
  	 		
  	 		<Label keyword="FontNameLabel">Font Name</Label>
  	 		<Label keyword="FontStyleLabel">Font Style</Label>
   	 		<Label keyword="FontSizeLabel">Font Size</Label>
 		  	<Field keyword="FontName" type="string" editable="yes" sensitive="yes"
				maxLength="12"/>
 		  	<Field keyword="FontStyle" type="comboBox"/>
 		  	<Field keyword="FontSize" type="int" editable="yes" sensitive="yes"
				maxLength="5"/>
			<Button keyword="Ok">Ok</Button>
 			<Button keyword="Cancel">Cancel</Button>
			<Button keyword="Apply">Apply</Button>
			<Border keyword="Border1"/>
			
 	 		<Layout>
 	 		
 			 <Constraints component="Border1" xPos="0" yPos="0" xSize="80" ySize="20" xStretch="true" yStretch="true"/>	 			
			 <Constraints component="FontNameLabel" xPos="1" yPos="1" xSize="10" ySize="5" xStretch="false" yStretch="false"/>
 			 <Constraints component="FontStyleLabel" xPos="1" yPos="10" xSize="10" ySize="5" xStretch="false" yStretch="false"/>
			 <Constraints component="FontSizeLabel" xPos="1" yPos="17" xSize="10" ySize="5" xStretch="false" yStretch="false"/>
			 <Constraints component="FontName" xPos="50" yPos="1" xSize="10" ySize="5" xStretch="false" yStretch="false"/>
			 <Constraints component="FontStyle" xPos="50" yPos="10" xSize="25" ySize="5" xStretch="false" yStretch="false"/>
			 <Constraints component="FontSize" xPos="50" yPos="17" xSize="5" ySize="5" xStretch="false" yStretch="false"/>
	 
			 <Constraints component="Ok" xPos="10" yPos="22" xSize="25" ySize="5" xStretch="false" yStretch="false"/>
			 <Constraints component="Apply" xPos="36" yPos="22" xSize="25" ySize="5" xStretch="false" yStretch="false"/>
			 <Constraints component="Cancel" xPos="61" yPos="22" xSize="25" ySize="5" xStretch="false" yStretch="false"/>
			 
 	 		</Layout>
 	 		
  	 	</Screen>	
  	 		
  	</CommandArea>
  	 
  </Window>
  
</Gui>