<?xml version="1.0"?>
<!DOCTYPE Gui SYSTEM "gui.dtd">
<Gui>
 <Dialog keyword="cfe_userpreferences" width="512" height="384">
  <HelpPanel keyword="HELPPANELKEYWORD" position="bottom"/>
  <CommandArea keyword="CommandArea">
   <Screen keyword="SCREEN1" title="screen1" rows="4" columns="80">
    <Label keyword="LABEL1" alignment="left">Default Text Editor =</Label>
    <Field keyword="EDITOR" type="comboBox" maxLength="9" editable="yes" sensitive="yes"/>
    <Label keyword="LABEL2" alignment="left">Execution node for applications =</Label>
    <Field keyword="EXEC_NODE" type="string" maxLength="12" editable="yes" sensitive="yes"/>
    <Layout>
     <Constraints component="LABEL1"    xPos="1"  yPos="1" xSize="21" ySize="1" xStretch="false" yStretch="false"/>
     <Constraints component="EDITOR"    xPos="40" yPos="1" xSize="9"  ySize="1" xStretch="false" yStretch="false"/>
     <Constraints component="LABEL2"    xPos="1"  yPos="2" xSize="35" ySize="1" xStretch="false" yStretch="false"/>
     <Constraints component="EXEC_NODE" xPos="40" yPos="2" xSize="12" ySize="1" xStretch="false" yStretch="false"/>
    </Layout>
    <HelpSection>
     <Help component="EDITOR">
      <Tip> Select the preferred text editor. </Tip>
      <Text><![CDATA[<html>
<b><center>EDITOR<br>Select the preferred text editor.</center></b>
<pre> Default = vi
 Allowed = vi
           nedit
           xemacs
 Allows the user to select the preferred text editor. </pre></html>]]></Text>
     </Help>
     <Help component="EXEC_NODE">
      <Tip> Execution node for external applications. </Tip>
      <Text><![CDATA[<html>
<b><center>EXEC_NODE<br>Execution node for external applications.</center></b>
<pre> Default = poepsn03
 Allowed =
 The exectuion node for the external applications listed under tools. </pre></html>]]></Text>
     </Help>
    </HelpSection>
   </Screen>
   <BottomAreaComponent>
    <Screen keyword="BOTTOMSCREEN" title="BottomScreen" rows="2" columns="40">
     <Button keyword="OK"> OK </Button>
     <Button keyword="APPLY">Apply</Button>
     <Button keyword="CANCEL">Cancel</Button>
     <Button keyword="HELP">Help</Button>
     <Layout>
      <Constraints component="OK" xPos="1" yPos="0" xSize="6" ySize="1" xStretch="false" yStretch="false"/>
      <Constraints component="APPLY" xPos="8" yPos="0" xSize="6" ySize="1" xStretch="false" yStretch="false"/>
      <Constraints component="CANCEL" xPos="16" yPos="0" xSize="6" ySize="1" xStretch="false" yStretch="false"/>
      <Constraints component="HELP" xPos="34" yPos="0" xSize="6" ySize="1" xStretch="false" yStretch="false"/>
     </Layout>
     <HelpSection>
      <Help component="OK">
       <Tip>Button to accept values and remove pop-up.</Tip>
       <Text><![CDATA[<html>
<b><center>OK<br> Button to accept values and remove pop-up.</center></b>
<pre> Default =
 Allowed =
 Button that accepts values and removes the pop-up screen.</pre></html>]]></Text>
      </Help>
      <Help component="APPLY">
       <Tip>Button that accepts values but does not remove the pop-up.</Tip>
       <Text><![CDATA[<html>
<b><center>APPLY<br> Button that accepts values but does not remove the pop-up.</center></b>
<pre> Default =
 Allowed =
 Button that accepts values but does not remove the pop-up.</pre></html>]]></Text>
      </Help>
      <Help component="CANCEL">
       <Tip>Button to remove the pop-up without changing values.</Tip>
       <Text><![CDATA[<html>
<b><center>CANCEL<br> Button to remove the pop-up without changing values.</center></b>
<pre> Default =
 Allowed =
 Button to remove the pop-up without changing values.</pre></html>]]></Text>
      </Help>
      <Help component="HELP">
       <Tip>Allows the user to access the pop-up Help Window.</Tip>
       <Text><![CDATA[<html>
<b><center>HELP<br> Allows the user to access the pop-up Help Window.</center></b>
<pre> Default =
 Allowed =
 The Help Window allows access to three kinds of help:  Parameter Help, CPS
 Process Help and Application (CFE) Help.</pre></html>]]></Text>
      </Help>
     </HelpSection>
    </Screen>
   </BottomAreaComponent>
  </CommandArea>
  <Help component="cfe_userpreferences">
  </Help>
 </Dialog>
</Gui>
