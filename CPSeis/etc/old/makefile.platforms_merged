                                                     -D_FILE_OFFSET_BITS=64
  CC_IBSMA   = gcc -c -gdwarf -Wall -DLINUX -DLINUXA -D_REENTRANT \
                                                     -D_LARGEFILE_SOURCE \
                                                     -D_FILE_OFFSET_BITS=64
  CC_LINK    = gcc

  CXX        = g++ -c -gdwarf -Wall -DLINUX -DLINUXA  \
                                                     -D_FILE_OFFSET_BITS=64
  CXX_IBSMA  = g++ -c -gdwarf -Wall -DLINUX -DLINUXA -D_REENTRANT \
                                                     -D_LARGEFILE_SOURCE \
                                                     -D_FILE_OFFSET_BITS=64
  CXX_LINK   = g++
  CXX_DEPEND = g++ -MM              -DLINUX -DLINUXA  \
                                                     -D_FILE_OFFSET_BITS=64

